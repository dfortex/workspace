import java.awt.*;
import java.awt.event.*;

public class GUI extends Frame implements ActionListener
{
	private Label lbinput;
	private Label lboutput;
	private TextField tfinput;
	private TextField tfoutput;
	private int number;
	private int sum = 0;
	
	public GUI()
	{
		setLayout(new FlowLayout());
		lbinput = new Label("Enter an Integer: ");
		add(lbinput);
		
		tfinput = new TextField(10);
		add(tfinput);
		
		tfinput.addActionListener(this);
		
		lboutput = new Label("The Accumulated Sum is: ");
		add(lboutput);
		
		tfouput = new TextField(10);
		tfoutput.setEditable(false);
		add(tfoutput);
		
		setTitle("GUI Accumulator");
		setSize(350, 120);
		setVisible(true);
	}
	
	public static void main(String[] args) 
	{
		// TODO Auto-generated method stub
		new GUI();
	}

	@Override
	public void actionPerformed(ActionEvent arg0) {
		// TODO Auto-generated method stub
		number = Integer.parseInt(tfinput.getText());
		sum += number;
		tfinput.setText("");
		tfouput.setText(sum + "");
	}

}
